			<groupId>com.syncnapsis.syncnapsis-core</groupId>
			<artifactId>syncnapsis-core-data</artifactId>
			<version>${syncnapsis-core-data.version}</version>
		</dependency>
		<dependency>
			<groupId>com.syncnapsis.syncnapsis-core</groupId>
			<artifactId>syncnapsis-core-websockets</artifactId>
			<version>${syncnapsis-core-websockets.version}</version>
			<optional>true</optional>
		</dependency>
		<!-- WEB - START -->
		<dependency>
			<groupId>org.glassfish</groupId>
			<artifactId>javax.servlet</artifactId>
			<version>${servlet.version}</version>
			<scope>provided</scope>
		</dependency>
		<!-- WEB - END -->
	</dependencies>

	<profiles>
	</profiles>

	<properties>
