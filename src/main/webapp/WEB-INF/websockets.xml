<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
	default-lazy-init="true">

	<bean id="webSocketManager" class="com.syncnapsis.websockets.WebSocketManager" lazy-init="false">
		<property name="children">
			<list>
				<ref bean="httpFallbackEngine" />
				<ref bean="jettyEngine" />
			</list>
		</property>
		<property name="serviceMapping" ref="serviceMapping" />
		<property name="securityManager" ref="securityManager" />
		<property name="connectionProvider" ref="connectionProvider" />
	</bean>

	<bean id="connectionProvider" class="com.syncnapsis.providers.impl.ThreadLocalConnectionProvider" />

	<bean id="httpFallbackEngine" class="com.syncnapsis.websockets.engine.http.HttpFallbackEngine" />

	<bean id="jettyEngine" class="com.syncnapsis.websockets.engine.jetty.JettyEngine" />

	<bean id="serviceMapping" class="com.syncnapsis.websockets.ServiceMapping">
		<property name="protocols">
			<map key-type="java.lang.String" value-type="java.lang.String">
				<entry key="chat" value-ref="chatService" />
				<entry key="rpc" value-ref="openSessionInViewService"/>
				<!-- 
				<entry key="rpc" value-ref="rpcService" />
				 -->
			</map>
		</property>
	</bean>

	<bean id="chatService" class="com.syncnapsis.websockets.service.BroadcastService" />

	<bean id="logService" class="com.syncnapsis.websockets.service.BaseService" />

	<bean id="openSessionInViewService" class="com.syncnapsis.websockets.service.OpenSessionInViewService">
		<property name="interceptedService" ref="rpcService" />
		<property name="sessionFactory" ref="sessionFactory" />
		<property name="flushMode" value="COMMIT" />
	</bean>

	<bean id="rpcService" class="com.syncnapsis.websockets.service.rpc.RPCService">
		<property name="serializer" ref="serializer" />
		<property name="rpcHandler" ref="rpcHandler" />
	</bean>

	<bean id="rpcHandler" class="com.syncnapsis.websockets.service.rpc.DataRPCHandler">
		<property name="serializer" ref="serializer" />
		<property name="universalManager" ref="universalManager" />
	</bean>

	<bean id="serializer" class="com.syncnapsis.utils.serialization.JacksonStringSerializer">
		<property name="mapper" ref="mapper" />
	</bean>
	
	<!-- 
	mapper originally intended for use, but due to the database structure we
	need a workaround beeing able to handle circular references and a reference
	limit to prevent loading the whole database... 
	workaround is realized in LimitedReferenceDepthMapper
	
	<bean id="mapper" class="com.syncnapsis.utils.serialization.BaseMapper">
		<property name="securityManager" ref="securityManager" />
	</bean>
	 -->
	<bean id="mapper" class="com.syncnapsis.utils.serialization.LimitedReferenceDepthMapper">
		<property name="securityManager" ref="securityManager" />
		<property name="depthLimit" value="1"/>
	</bean>

	<!-- Servlets -->

	<bean id="actionFilter" class="com.syncnapsis.web.ActionFilter">
		<property name="rpcHandler" ref="rpcHandler" />
		<property name="serializer" ref="serializer" />
		<property name="actionManager" ref="actionManager" />
	</bean>

	<bean id="localeFilter" class="com.syncnapsis.web.LocaleFilter">
		<property name="sessionProvider" ref="sessionProvider" />
		<property name="localeProvider" ref="localeProvider" />
		<property name="localeDirectoryLevel" value="1" />
		<property name="useInclude" value="true" />
	</bean>
</beans>