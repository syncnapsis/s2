<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
            http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd"
       default-lazy-init="true">
    
    <!-- =================================================================== -->
    <!-- Utilities					                                         -->
    <!-- =================================================================== -->
    
    <bean id="applicationContextUtil" class="com.syncnapsis.utils.ApplicationContextUtil" lazy-init="false" /> 

    <bean id="timeProvider" class="com.syncnapsis.providers.impl.SystemTimeProvider"/>

	<bean id="sessionProvider" class="com.syncnapsis.providers.impl.ThreadLocalSessionProvider" />
    
    <!-- =================================================================== -->
    <!-- Serialization				                                         -->
    <!-- =================================================================== -->

	<bean id="serializer" class="com.syncnapsis.utils.serialization.JacksonStringSerializer">
		<property name="mapper" ref="mapper" />
	</bean>
	
	<!-- 
		mapper originally intended for use, but due to the database structure we
		need a workaround beeing able to handle circular references and a reference
		limit to prevent loading the whole database... 
		workaround is realized in LimitedReferenceDepthMapper
	
	<bean id="mapper" class="com.syncnapsis.utils.serialization.BaseMapper">
		<property name="securityManager" ref="securityManager" />
	</bean>
	 -->
	<bean id="mapper" class="com.syncnapsis.utils.serialization.LimitedReferenceDepthMapper">
		<property name="securityManager" ref="securityManager" />
		<property name="depthLimit" value="3"/>
	</bean>
    
</beans>
