<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<!-- ==================================================================
Configure and deploy the test web application in $(jetty.home)/webapps/test

Note. If this file did not exist or used a context path other that /test
then the default configuration of jetty.xml would discover the test
webapplication with a WebAppDeployer.  By specifying a context in this
directory, additional configuration may be specified and hot deployments 
detected.
===================================================================== -->

<Configure class="org.eclipse.jetty.webapp.WebAppContext">


  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <!-- Required minimal context configuration :                        -->
  <!--  + contextPath                                                  -->
  <!--  + war OR resourceBase                                          -->
  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <Set name="contextPath">/universe/styles</Set>
  <Set name="resourceBase">D:/info/syncnapsis/syncnapsis-universe/syncnapsis-universe-conquest/src/main/webapp/styles</Set>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <!-- Optional context configuration                                  -->
  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <Set name="copyWebDir">false</Set>
  
  <!--
  <Set name="initParams">
	<New class="java.util.HashMap">
		<Put name="maxCachedFiles">0</Put>
	</New>
  </Set>
  -->
  
  <Call name="setInitParameter">
    <Arg type="String">org.eclipse.jetty.servlet.Default.maxCachedFiles</Arg>
    <Arg type="String">0</Arg>
  </Call>
</Configure>
